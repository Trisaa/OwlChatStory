<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/read_left_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/read_left_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/read_left_icon"
        android:text="User1"
        android:textColor="#888888" />

    <TextView
        android:id="@+id/read_left_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/read_left_name"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/read_left_icon"
        android:background="@drawable/chat_left_bg"
        android:gravity="left"
        android:paddingBottom="6dp"
        android:paddingLeft="20dp"
        android:paddingRight="16dp"
        android:paddingTop="6dp"
        android:text="Are you OK?"
        android:textColor="#e6000000" />

</RelativeLayout>