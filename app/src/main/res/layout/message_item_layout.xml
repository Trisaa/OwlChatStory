<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="6dp">

    <TextView
        android:id="@+id/message_item_time_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        tools:text="2018-03-02" />

    <ImageView
        android:id="@+id/message_item_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/message_item_time_txv"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/message_item_content_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_item_time_txv"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="60dp"
        android:layout_toRightOf="@id/message_item_icon"
        android:background="@drawable/chat_left_bg"
        android:gravity="left"
        android:paddingBottom="6dp"
        android:paddingLeft="14dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp"
        android:textColor="#e6000000"
        android:textSize="15sp"
        tools:text="Are you OK?" />

</RelativeLayout>