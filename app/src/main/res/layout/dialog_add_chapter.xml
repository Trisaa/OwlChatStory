<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="章节标题" />

    <EditText
        android:id="@+id/add_chapter_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/common_tags_bg"
        android:hint="角色名称（最多10字）"
        android:padding="5dp"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/add_chapter_delete_txv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/common_gray_rectangle_bg"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:text="放弃"
            android:textColor="@color/common_text_color"
            android:visibility="visible" />

        <TextView
            android:id="@+id/add_chapter_submit_txv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/common_red_rectangle_bg"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:text="保存"
            android:textColor="@color/common_red" />
    </LinearLayout>

</LinearLayout>