<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:minHeight="156dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/read_over_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/read_over_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/read_aside_bg"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:text="@string/common_continue"
            android:textColor="#99000000"
            android:visibility="visible" />

        <TextView
            android:id="@+id/read_share_txv"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:background="@drawable/common_red_btn_selector"
            android:gravity="center"
            android:text="@string/common_share"
            android:textColor="#ffffff"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/read_next_chapter_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_gray_pressed"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/read_next_fiction_name_txv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="@string/common_next"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/read_next_chapter_name_txv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="第2章 进击的巨人"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/read_next_txv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:background="@drawable/common_red_rectangle_bg"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="8dp"
                android:text="@string/common_next"
                android:textColor="@color/common_red"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>