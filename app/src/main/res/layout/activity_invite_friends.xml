<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/actionBarSize">

                <ImageView
                    android:id="@+id/read_left_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/read_left_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/read_left_icon"
                    android:text="@string/app_name"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/read_left_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/read_left_name"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/read_left_icon"
                    android:background="@drawable/chat_left_bg"
                    android:gravity="left"
                    android:paddingBottom="6dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="10dp"
                    android:paddingTop="6dp"
                    android:text="@string/invite_friend_content1"
                    android:textColor="#e6000000"
                    android:textSize="15sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/invite_my_code"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/invite_code_txv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="0000"
                    android:textColor="#ffffff"
                    android:textIsSelectable="true"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/invite_now_txv"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/common_red_btn_selector"
                    android:gravity="center"
                    android:text="@string/invite_now"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/read_right_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="16dp"
                    android:background="@mipmap/user_default_icon" />

                <TextView
                    android:id="@+id/read_right_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/read_right_icon"
                    android:text="User2"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/read_right_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/read_right_name"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/read_right_icon"
                    android:background="@drawable/chat_right_bg"
                    android:gravity="left"
                    android:paddingBottom="6dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="14dp"
                    android:paddingTop="6dp"
                    android:text="@string/invite_friend_content2"
                    android:textColor="#fefefe"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/read_left_icon1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/read_left_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/read_left_icon1"
                    android:text="@string/app_name"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/read_left_content1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/read_left_name1"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/read_left_icon1"
                    android:background="@drawable/chat_left_bg"
                    android:gravity="left"
                    android:paddingBottom="6dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="10dp"
                    android:paddingTop="6dp"
                    android:text="@string/invite_friend_content3"
                    android:textColor="#e6000000"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/read_right_icon1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="16dp"
                    android:background="@mipmap/user_default_icon" />

                <TextView
                    android:id="@+id/read_right_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/read_right_icon1"
                    android:text="User2"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/read_right_content1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/read_right_name1"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/read_right_icon1"
                    android:background="@drawable/chat_right_bg"
                    android:gravity="left"
                    android:paddingBottom="6dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="14dp"
                    android:paddingTop="6dp"
                    android:text="@string/invite_friend_content4"
                    android:textColor="#fefefe"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/read_left_icon2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/read_left_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/read_left_icon2"
                    android:text="@string/app_name"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/read_left_content2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/read_left_name2"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/read_left_icon2"
                    android:background="@drawable/chat_left_bg"
                    android:gravity="left"
                    android:paddingBottom="6dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="10dp"
                    android:paddingTop="6dp"
                    android:text="@string/invite_friend_content5"
                    android:textColor="#e6000000"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        app:layout_scrollFlags="scroll|enterAlways|snap"
        app:navigationIcon="@drawable/vector_close"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ToolbarTheme"
        app:titleTextColor="@color/colorPrimaryDark" />
</RelativeLayout>