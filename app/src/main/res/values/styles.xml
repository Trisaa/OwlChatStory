<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <!-- 允许使用transitions -->
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/common_toolbar_color</item>
        <item name="actionMenuTextColor">@color/common_toolbar_color</item>
        <item name="colorControlNormal">@color/common_toolbar_color</item>
    </style>

    <style name="NoBackGroundDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        //对话框的背景变暗的程度，值越大，背景就越暗
        <item name="android:backgroundDimAmount">0.9</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

</resources>
